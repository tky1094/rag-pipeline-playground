# API Keys
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# Chunk settings
# RAG_CHUNK__SIZE=512
# RAG_CHUNK__OVERLAP=64
# RAG_CHUNK__SPLIT_BY_HEADER=true

# Embedding settings
# RAG_EMBEDDING__MODEL=text-embedding-3-small
# RAG_EMBEDDING__DIMENSIONS=1536
# RAG_EMBEDDING__API_KEY=           # 未指定時は OPENAI_API_KEY
# RAG_EMBEDDING__BASE_URL=          # OpenAI互換APIのURL (例: http://localhost:11434/v1)

# Retriever settings
# RAG_RETRIEVER__TOP_K=5
# RAG_RETRIEVER__COLLECTION_NAME=knowledge

# Generator settings
# RAG_GENERATOR__PROVIDER=openai     # openai or anthropic
# RAG_GENERATOR__MODEL=gpt-4o
# RAG_GENERATOR__MAX_TOKENS=1024
# RAG_GENERATOR__TEMPERATURE=0.0
# RAG_GENERATOR__API_KEY=            # 未指定時は各プロバイダーのデフォルト
# RAG_GENERATOR__BASE_URL=           # OpenAI互換APIのURL (例: http://localhost:11434/v1)

# Pipeline settings
# RAG_CHROMA_PATH=.chroma
# RAG_KNOWLEDGE_DIR=knowledge
